extends baseEmail

block content
  p New Contact Message Received
  p Contact Details:
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  p Name: #{name}
                  p Email: #{email}
                  p Subject: #{subject}
                  p Message: #{message}
                  p IP Address: #{ipAddress}
                  p User Agent: #{userAgent}
  p Please respond to this inquiry as soon as possible.
  p - Biographies Website Notification System
